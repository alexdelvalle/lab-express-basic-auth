<h2> Sign Up </h2>

<% if (typeof errorMessage !== "undefined") { %>
  <p class="error-message"> <%= errorMessage %> </p>
<% } %>

<form id="form" method="post" action="/process-signup">

  <label for="full-name-input"> Full Name </label>
  <input id="full-name-input" type="text" placeholder="e.g. Jon Snow" name="signupFullName" />
  <br />

  <label for="username-input"> Username </label>
  <input id="username-input" type="text" placeholder="e.g. alexnwnderland" name="signupUsername" />
  <br />

  <label for="password-input"> Password </label>
  <input id="password-input" type="text" placeholder="e.g. swordfish89$" name="signupPassword" />
  <br />

  <button> Sign Me Up! </button>
</form>
